<div style="display: flex; justify-content: center;">
  <div style="max-width: 500px;">
    <h1>商品を編集</h1>
    <%= form_with model: @product, url: admin_product_path(@product), method: :patch, html: { multipart: true } do |form| %>
      <div>
        <%= form.label :名前 %>
        <%= form.text_field :name %>
        <% if @product.errors[:name].any? %>
          <div style="color: red;"><%= @product.errors[:name].join(",") %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :説明 %>
        <%= form.text_field :description %>
        <% if @product.errors[:description].any? %>
          <div style="color: red;"><%= @product.errors[:description].join(",") %></div>
        <% end %>
      </div>
      <div>
        <%= form.label :価格 %>
        <%= form.text_field :price %>
        <% if @product.errors[:price].any? %>
          <div style="color: red;"><%= @product.errors[:price].join(",") %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.label :画像 %>
        <%= form.file_field :image %>
      </div>
      <%= form.submit '更新', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>
